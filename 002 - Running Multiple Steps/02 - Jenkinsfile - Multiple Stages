pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    	stage('build'){
		steps{
			createFile('date.txt')
		}
	}
    	stage('test'){
		steps{
			sh "grep 2019 date.txt"
		}
	}	
    }
}

def createFile(filename = '') {
	sh "date > $filename && cat $filename"
}

def checkDate(filename = '',year = '2019') {
	sh "cat $filename"
}
