pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
	parameters { 
		choice(name: 'CHOICE', choices: ['Build', 'Test']
	}
    	stages {
    	stage('build'){
		when{
			environment name: 'CHOICE', value: 'Build'
		}
		steps{
			sh "echo Build"
		}
	}
    	stage('test'){
		when{
			environment name: 'CHOICE', value: 'Build'
		}
		steps{
			sh "echo Test"
		}
	}	
    	}
}
